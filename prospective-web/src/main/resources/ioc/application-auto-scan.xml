<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    <!--
    @Component 基本注解 标志一个受spring管理的组件
    @Repository 标志持久层组件
    @Service 标志服务层组件
    @Controller 标志表现层组件
    context:include-filter 指定包含哪些filter
    context:exclude-filter 指定不包含哪些filter
    use-default-filters 配合include-filter
    @Autowired(required) @Resource @Inject 可以自动装配bean
    @Qualifier

    -->
    <context:component-scan base-package="com.prospective.web" resource-pattern="controller/*.class">
    </context:component-scan>

    <!--spring 4.0 新疼醒 泛型依赖注入 -->

</beans>
